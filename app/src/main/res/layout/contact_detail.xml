<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:id="@+id/user_profile"
        android:src="@drawable/ic_account_circle_black_150dp" />
    <me.myatminsoe.mdetect.MMTextView
        android:layout_centerInParent="true"
        android:layout_below="@+id/user_profile"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="3dp"
        android:textAlignment="center"
        android:text="City Mark" />
    <me.myatminsoe.mdetect.MMTextView
        android:textStyle="italic"
        android:padding="3dp"
        android:layout_centerInParent="true"
        android:id="@+id/category"
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Store Shop" />

    <me.myatminsoe.mdetect.MMTextView
        android:id="@+id/txtaddress"
        android:padding="3dp"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/category"
        android:layout_centerInParent="true"
        android:text="No (3) Thidar fsjdkfjks fjklsjfkl Street"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/btnDircetion"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_below="@id/name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_directions_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

</RelativeLayout>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_margin="5dp"
        android:layout_below="@+id/info"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:background="@color/shpe_back"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/phone_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

    </android.support.v7.widget.LinearLayoutCompat>







</RelativeLayout>