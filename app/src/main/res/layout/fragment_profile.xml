    </RelativeLayout>
    //second
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/editlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgl"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/phnol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/phicon2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/name"/>

            <EditText
                android:paddingLeft="10dp"
                android:id="@+id/ename"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:background="@drawable/profileedittext"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/workl2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/phnol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/work"/>
            <EditText
                android:paddingLeft="10dp"
                android:id="@+id/ework"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:background="@drawable/profileedittext"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/genderl2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/workl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/gender"/>
            <RadioGroup
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <RadioButton
                    android:id="@+id/boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="က်ား"
                    />

                <RadioButton
                    android:id="@+id/girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="မ" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/addressl2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/genderl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"/>
            <EditText
                android:paddingLeft="10dp"
                android:id="@+id/eaddress"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:background="@drawable/profileedittext"/>
        </LinearLayout>


    </RelativeLayout>


    <Button
        android:id="@+id/log_out"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="Log out"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/rounded_edit"
        android:backgroundTint="@color/colorCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>