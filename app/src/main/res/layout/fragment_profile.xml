<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/imgl"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingTop="15dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="10dp">

            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/eimg"
                android:text="Edit"
                android:textSize="17dp"
                android:textColor="#fff"
                android:id="@id/btn"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/eimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_crop"
                />

        </RelativeLayout>
        <ImageView

            android:id="@+id/profilepicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:src="@drawable/profileboy" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
            android:text="09-771616178"
            android:textColor="#fff" />


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/showlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgl"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/namel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/nameicon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/name"/>

            <TextView
                android:id="@+id/showname"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kyaw Thiha"
                android:textSize="17dp"
                android:layout_gravity="bottom"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout

            android:id="@+id/workl"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/namel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/work"/>

            <TextView
                android:id="@+id/showwork"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ေတာင္သူ"
                android:textSize="17dp"
                android:layout_gravity="bottom"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/genderl"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/workl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/gender"/>

            <TextView
                android:id="@+id/showgender"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="က်ား"
                android:textSize="17dp"
                android:layout_gravity="bottom"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/addressl"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genderl"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/showaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:text="အမွတ္ (၁၀ ) ၊ ရန္ေအာင္လမ္း"
                android:textColor="@color/colorPrimary"
                android:textSize="17dp" />
        </LinearLayout>

