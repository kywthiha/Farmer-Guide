<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:layout_alignParentTop="true"
       app:subtitleTextColor="@color/colorPrimary"
        android:id="@+id/news_tool_bar"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="?android:attr/actionBarSize"/>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PostshowdetailActivity"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:src="@drawable/v"
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:background="@color/post_show_detail"
                    android:padding="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="1dp"
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_color"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:text="Hello kyaw"
                    />
            </RelativeLayout>


            <TextView
                android:text="ksjfksjkl ksfjkls fkslhfklsa fksjkfjsfkjsaf s"
                android:layout_gravity="left"
                android:justificationMode="inter_word"
                android:padding="8dp"
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:lineSpacingExtra="4dp"
                android:gravity="center_vertical"
                />

        </LinearLayout>

    </ScrollView></android.support.v7.widget.LinearLayoutCompat>
